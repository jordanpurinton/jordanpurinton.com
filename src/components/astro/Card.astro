---
import ActionButton from './ActionButton.astro';
import type { Props as ActionButtonProps } from './ActionButton.astro';
import { Image } from '@astrojs/image/components';

export interface Props {
	title: string;
	bulletPoints?: string[];
	imgSrc: string;
	tools: string;
	actionButtonProps?: ActionButtonProps[];
}

const { title, bulletPoints, imgSrc, tools, actionButtonProps } = Astro.props;
---

<li class="card">
	<h2>
		{title}
	</h2>
	<Image
		src={import(/* @vite-ignore */ `../../../public/${imgSrc}.png`)}
		alt={imgSrc}
		class="card-img"
		aspectRatio="16:9"
	/>
	{bulletPoints?.map((point) => <p>{point}</p>)}
	<p>üõ†Ô∏è: {tools}</p>
	<div class="action-button-container">
		{actionButtonProps?.map((props) => <ActionButton {...props} />)}
	</div>
</li>

<style>
	.action-button-container {
		display: flex;
		gap: 1rem;
	}
	.card {
		background-color: #131313;
		border-radius: 0.6rem;
		border: solid 1px rgba(43, 255, 0, 0.235);
		display: flex;
		flex-wrap: wrap;
		list-style: none;
		padding: 1.5rem;
	}
	.card-img {
		margin: 1rem 0;
		height: auto;
		max-width: 100%;
	}
	p {
		line-height: 1.3;
		margin: 1rem 0;
		color: #fff;
	}
	h2 {
		text-decoration: 1.5px underline wavy rgba(43, 255, 0, 0.235);
		text-underline-offset: 0.5rem;
	}
</style>
