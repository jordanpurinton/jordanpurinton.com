---
import Link from './Link.astro';
---

<small>Places you can find me</small>
<center class="link-list">
	<Link link="mailto:me@jordanpurinton.com" iconType="mdi:email" />
	<Link
		link="https://www.linkedin.com/in/jordanpurinton"
		iconType="mdi:linkedin"
	/>
	<Link link="https://github.com/jordanpurinton" iconType="mdi:github" />
	<Link
		link="https://github.com/jordanpurinton/resume/raw/main/JordanPurintonResume.pdf"
		iconType="mdi:paper"
	/>
</center>

<style>
	.link-list {
		display: flex;
		gap: 3rem;
		justify-content: center;
		margin: 1rem 0;
	}
	small {
		display: flex;
		color: var(--primary-color);
		justify-content: center;
		margin-top: 1rem;
	}
</style>
