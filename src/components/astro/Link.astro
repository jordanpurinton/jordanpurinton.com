---
import { Icon } from 'astro-icon';

export interface Props {
	link: string;
	iconType: string;
}

const { link, iconType } = Astro.props;
---

<button id={iconType}>
	<Icon height={40} width={40} name={iconType} />
</button>

<script define:vars={{ link, iconType }}>
	function handleClick() {
		window.open(link, '_blank');
	}
	const icon = document.getElementById(iconType);
	icon?.addEventListener('click', handleClick);
</script>

<style>
	button {
		background: none;
		border: none;
		padding: 0;
		font: inherit;
		cursor: pointer;
		outline: inherit;
	}
	button:hover {
		fill: var(--secondary-color);
		transform: translateY(-0.25em);
		transition: all 0.5s ease-in-out;
	}
</style>
